---
export interface Props {
    title: string,
    url: string,
    img:string,
    description: string,
    date: string
}
const {title, description, url, img, date} = Astro.props
---
<div class="flex flex-col">
    <div class="p-4 bg-gray-900 border border-gray-600 shadow-md hover:shodow-lg rounded-2xl">
      <div class="flex-none lg:flex">
        <div class=" h-full w-full lg:h-36 lg:w-36   lg:mb-0 mb-3">
          <img src={img} alt="unsplash images" class=" w-full  object-contain  lg:h-36 rounded-2xl">
        </div>
        <div class="flex-auto lg:ml-3 justify-evenly py-2">
          <div class="flex flex-col ">
            <div class="flex items-center mr-auto text-sm">
              <svg class="h-5 w-5 text-yellow-300 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z">
                </path>
              </svg>
              <!-- <p class="font-normal text-gray-500">4.5</p> -->
            </div>
            <div class="flex items-center  justify-between min-w-0">
              <h2 class="mr-auto   text-base text-gray-100 font-medium truncate">{title}</h2>
              <div class="flex items-center font-medium text-gray-300 ">
                <!-- <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 8h6m-5 0a3 3 0 110 6H9l3 3m-3-6h6m6 1a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg> -->
                {date}
              </div>
            </div>
            <p class="flex items-center text-sm text-gray-400">{description}<span class="relative inline-flex rounded-md shadow-sm ml-2">
                <span class="flex absolute h-2 w-2 top-0 right-0 -mt-1 -mr-1">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
                </span>
              </span>
            </p>
          </div>
          <div class="flex space-x-3 text-sm font-medium mt-2">
            <!-- <div class="flex-auto items-center flex space-x-3 text-xs text-gray-500">
              <span>2 Bedroom</span><span>4 Guest</span>
            </div> -->
            <a href={url} class="m-0 flex-no-shrink bg-green-400 hover:bg-green-500 px-5 py-2 text-xs shadow-sm hover:shadow-lg font-medium tracking-wider border-2 border-green-300 hover:border-green-500 text-white rounded-full transition ease-in duration-300" type="button" aria-label="like">Go project</a>
          </div>
        </div>
      </div>
    </div>
    <div class="lg:w-2/5 ..."></div>
</div>